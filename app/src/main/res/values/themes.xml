<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#0288D1</item>
        <item name="colorPrimaryDark">#01579B</item>
        <item name="colorAccent">#FF5722</item>
        <item name="android:windowBackground">#333333</item> <!-- Darker gray background -->
    </style>

    <style name="Theme.MyApplication.Splash" parent="Theme.MyApplication">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">#333333</item> <!-- Match status bar to dark gray -->
    </style>
</resources>